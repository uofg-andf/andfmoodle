{{< core/modal }}
    <div class="col-lg-4 col-md-4">
        {{$title}}{{/title}}
        {{$body}}
            <div class="container">
                <div class="row">
                    <p class="modal-body-txt">
                        {{{bodycontent}}}
                    </p>
                </div>
            </div>
        {{/body}}
        {{$footer}}
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <button type="button" class="btn btn-default btn-default-padding btn-cancel-alignment" data-action="cancel">
                        {{{strcancel}}}
                    </button>
                </div>
                <div class="col-lg-6 col-md-6">
                    <button type="button" class="btn btn-default btn-release" data-action="{{dataaction}}" id="btn-confirm-to-release">
                        {{{strconfirm}}}
                    </button>
                </div>
            </div>
        {{/footer}}
    </div>
{{/ core/modal }}